<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/si"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/sport"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl"
        android:layout_toRightOf="@id/si"
        android:layout_marginRight="170dp"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textViewnom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textColor="@color/CardViewGrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textViewnom"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/rl2"
        android:layout_toLeftOf="@id/Rejoindre"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:id="@+id/ii"
            android:src="@drawable/ic_group_black_24dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="5/10"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/textViewNumber"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ii"/>
        
        
        
        
    </RelativeLayout>

    <Button
        android:id="@+id/Rejoindre"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:text="REJOINDRE"
        android:textColor="@color/OrangeNormal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundGrey">

    </RelativeLayout>


</RelativeLayout>