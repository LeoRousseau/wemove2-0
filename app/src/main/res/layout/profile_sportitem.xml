<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardViewSport"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id="@+id/RLtop"
            android:background="@drawable/bandeaubackground">

            <ImageView
                android:id="@+id/imageSport"
                android:layout_width="60dp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                tools:src="@drawable/sport" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/RLtop"
            android:background="@color/CardViewGrey">

            <TextView
                android:id="@+id/textSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                tools:text="Football"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textColor="@color/foregroundWhite"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>