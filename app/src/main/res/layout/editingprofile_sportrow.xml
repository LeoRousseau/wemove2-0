<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/sport"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageSportRow"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:text="Sport Name"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textColor="@color/OrangeNormal"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/imageSportRow"
        android:id="@+id/textSportRow"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/edit"
        android:layout_toLeftOf="@+id/deleteSportIcon"
        android:id="@+id/editSportIcon" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:id="@+id/deleteSportIcon"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete"/>

</RelativeLayout>